include ./head.pug
body
    include ./header.pug
    include ./notification.pug
    .content.centred
        form.login-form(action="/add_distributor", method="post", name="distributor_form")
            h1.formheader Add Distributor
            .horizontal-input-row
                .input-field
                    label(for="name") Name
                    input(type="text", name="name", placeholder="Enter distributor name")
                .input-field
                    label(for="email") Email
                    input(type="email", name="email", placeholder="Enter email address")
            .horizontal-input-row
                .input-field
                    label(for="phone") Phone
                    input(type="phone", name="phone", placeholder="Enter phone number")
                .input-field
                    label(for="address") Address
                    input(type="text", name="address", placeholder="Enter distributor address")
            button.button(onclick="")
                span Add Distributor
                i.fa-solid.fa-user-plus