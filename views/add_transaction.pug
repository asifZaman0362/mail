include ./head.pug
script(src="billmaker.js", type="text/javascript")
body
    include ./header.pug
    include ./notification.pug
    .content.centred
        form.login-form(action="/add_transaction", method="post", name="transaction_form")
            h1.formheader Add transaction
            .hidden
                input(name="ids", type="text")
                input(name="discounts", type="text")
                input(name="quantities", type="text")
            #stuff
                .purchase
                    .horizontal-input-row
                        .input-field
                            label(for="id") Product ID
                            input(class="id", type="text", name="id", placeholder="Enter product ID")
                        .input-field
                            label(for="discount") Discount
                            input(class="discount", type="number", name="discount", placeholder="Enter discount (in percentage)")
                        .input-field
                            label(for="quantity") Quantity
                            input(for="quantity", type="number", name="quantity", placeholder="Enter quantity")
            a.button(href="javascript:void(0)", onclick="addPurchaseRow()")
                span Add Purchase
            button.button(type="button", onclick="verifyAll()")
                span Add transaction
                i.fa-solid.fa-user-plus