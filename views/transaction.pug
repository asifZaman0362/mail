table#bill-table
    tr
        th 12 Jun 2022
        th Buyer ID
        td(colspan=2) #{buyer_id}
        th Seller ID
        td(colspan=2) #{seller_id}
    tr
        th(rowspan=2) Purchase ID
        th(colspan=3) Particulars
        th(colspan=3) Pricing
    tr
        th Product ID
        th Name
        th Quantity
        th Retail Price
        th Discount
        th Price
    for purchase of purchases
        tr
            td #{purchase.purchase_id}
            td #{purchase.product_id}
            td #{purchase.product_name}
            td #{purchase.quantity}
            td #{purchase.rate}
            td #{purchase.discount}
            td #{purchase.price}
    tr
        th(colspan=6) Total
        td #{transaction.cost}