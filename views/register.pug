include ./head_other.pug
body 
    include ./header.pug
    include ./notification.pug
    .content.centred
        form.login-form(name="register-form", method="POST", action="/register")
            h1.formheader Register new user
            .input-field 
                label(for="firstname") First name
                input(type="text", name="firstname", placeholder="Enter first name")
            .input-field 
                label(for="lastname") First name
                input(type="text", name="lastname", placeholder="Enter last name")
            .input-field
                label(for="username") Username
                input(type="text", name="username", placeholder="Enter username")
            .input-field
                label(for="domain") Domain
                input(type="text", name="domain", placeholder="Enter domain name")
            .input-field 
                label(for="password") Password
                input(type="password", name="password", placeholder="Enter password")
            .button-container 
                input(type="submit", value="Register")