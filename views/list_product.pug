include ./head.pug
body
    include ./header.pug
    include ./notification.pug
    .content.padded.filled
        .panel
            a.panel-link(href="/editor")
                h1.panel-heading
                    i.fa-solid.fa-angle-left
                    span Editor Panel
            h1.section-heading Product List
            if products.length > 0
                .table
                    .row.header-row
                        .table-head
                            h3.table-data-interior Product ID
                        .table-head
                            h3.table-data-interior Product Name
                        .table-head
                            h3.table-data-interior Manufacturer Name
                        .table-head
                            h3.table-data-interior Retail Price
                    for product of products
                        .row.data-row
                            .table-data.table-checkbox-container
                                span #{product.product_id}
                            .table-data
                                p.table-data-interior #{product.product_name}
                            .table-data
                                p.table-data-interior #{product.manufacturer}
                            .table-data
                                p.table-data-interior #{product.retail_price}
            else
                h2.message No records found!