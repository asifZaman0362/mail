include ./head.pug
body
    include ./header.pug
    include ./notification.pug
    .content.padded.filled
        .panel
            a.panel-link(href="/editor")
                h1.panel-heading
                    i.fa-solid.fa-angle-left
                    span Editor Panel
            h1.section-heading Retailer List
            if retailers.length > 0
                .table
                    .row.header-row
                        .table-head
                            h3.table-data-interior Retailer Name
                        .table-head
                            h3.table-data-interior Phone
                        .table-head
                            h3.table-data-interior Email
                        .table-head
                            h3.table-data-interior Address
                    for retailer of retailers
                        .row.data-row
                            .table-data.table-checkbox-container
                                span #{retailer.name}
                            .table-data
                                p.table-data-interior #{retailer.phone_number}
                            .table-data
                                p.table-data-interior #{retailer.email_address}
                            .table-data
                                p.table-data-interior #{retailer.address}
            else
                h2.message No records found!